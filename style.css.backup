* {
  border: none;
  border-radius: 0;
  font-family: Iosevka Nerd Font;
  font-size: 14px;
  min-height: 0;
}

window#waybar {
  background: #12131a;
  color: white;
}

#workspaces {
  background-color: #2a3152;
  margin: 5px;
  margin-left: 10px;
  border-radius: 5px;
}
#workspaces button {
  padding: 2px 10px;
  color: #fff;
}

#workspaces button.focused {
  color: #24283b;
  background-color: #7aa2f7;
  border-radius: 5px;
}

#workspaces button:hover {
  background-color: #7dcfff;
  color: #24283b;
  border-radius: 5px;
}

#language {
    color: #d8dee9;
    background-color: #bf616a;
    border-radius: 5px;
    margin-right: 5px;
    margin-top: 5px;
    margin-bottom: 5px;
    margin-left: 0px;
    padding: 0px 10px;
}

#custom-date,
#clock,
#battery,
#pulseaudio,
#network {
  background-color: #2a3152;
  padding: 2px 10px;
  margin: 5px 0px;
}

#clock {
  color: #b48ead;
  border-radius: 0px 5px 5px 0px;
  margin-right: 6px;
}


#battery {
  color: #9ece6a;
  margin-left: 5px;
  margin: 5px 0px;
  padding: 0 10px;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}

#battery.charging {
  color: #9ece6a;
}

#battery.warning:not(.charging) {
  background-color: #f7768e;
  color: #24283b;
  border-radius: 5px;
}

#battery.critical:not(.charging) {
  background-color: #fb4934;
  color: #24283b;
  border-radius: 5px;
}

#network {
  color: #f7768e;
  border-radius: 5px 5px 5px 5px;
}

#pulseaudio {
  color: #e0af68;
  background-color: #2a3152;
  margin: 5px 0;
  padding: 0 10px;
  margin-left: 3px;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}

#pulseaudio.microphone {
  color: #e0af68;
  background-color: #2a3152;
  margin: 5px 0;
  padding: 0 10px;
  border-radius: 0 5px 5px 0;
}



#memory {
  margin-left: 5px;
  background: #2a3152;
  margin: 5px 0;
  padding: 0 10px;
  margin-left: 3px;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  color: #ff9e64;
}

#cpu {
  margin: 5px 0;
  padding: 0 10px;
  background-color: #2a3152;
  color: #ff7a93;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
  margin-right: 6px;
}

#tray {
  background-color: #2a3152;
  margin: 5px;
  margin-left: 0px;
  margin-right: 6px;
  border-radius: 5px;
  padding: 0 10px;
}

#tray > * {
  padding: 0 2px;
  margin: 0 2px;
}
